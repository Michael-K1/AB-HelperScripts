  "main": "index.js",
  "volta": {
    "node": "22.17.0",
    "npm": "11.4.2"
  },
  "scripts": {
    "build": "npm run typeCheck && node esbuild.config.mjs",
    "typeCheck": "tsc --pretty --noEmit",
    "prepare": "husky",
    "package": "npm run build &&rm -rf dist && mkdir -p dist && cp -r build/* dist/ && cp package.json dist/ && node -e \"const fs = require('fs'); const pkg = JSON.parse(fs.readFileSync('dist/package.json')); delete pkg.devDependencies; pkg.main = 'main/main.mjs'; fs.writeFileSync('dist/package.json', JSON.stringify(pkg, null, 2));\" && cd dist && npm install --production && chmod +x main/main.mjs && cd .. && mkdir -p zip && zip -r zip/cardio-tools.zip dist/"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "fast-csv": "^5.0.2",
    "lodash-es": "^4.17.21",
    "luxon": "^3.7.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/args": "^5.0.3",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.*",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}